{% extends '@App/base.html.twig' %}

{% block content %}
    <div class="h3 mt-5 mb-2">Listado de ciudades</div>
    {% include '@Gestion/messages.html.twig' %}
    <hr>
	<table class="table table-hover table-bordered table-striped table-sm mt-2">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Nombre</th>
	      <th scope="col">Provincia</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	{% for c in ciudades %}
	  		<tr>
	  			<td>{{ loop.index }}</td>
	  			<td>{{ c.nombre|upper }}</td>
	  			<td>{{ c.provincia|upper }}</td>
	  			<td class="text-center"><a href="{{ path('editar_ciudad', { id : c.id }) }}" class="btn btn-sm btn-default">Editar</a></td>
	  		</tr>
	  	{% endfor %}
	  </tbody>
	</table>

{% endblock %}

{% block javascripts %}

<script type="text/javascript">

</script>
{% endblock %}

